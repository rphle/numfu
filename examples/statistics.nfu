// Statistics functions
import length, format from "std"
import println from "io"
import sqrt, sum from "math"

let mean = {nums ->
  sum(nums) / length(nums)
}

let variance = {nums ->
  let m = mean(nums) in
  sum(map(nums, {x -> (x-m)^2})) / length(nums)
}

let stddev = {nums -> sqrt(variance(nums))}

let data = [2,4,4,4,5,5,7,9]
println(format("mean = {}", mean(data)))
println(format("stddev = {}", stddev(data)))
